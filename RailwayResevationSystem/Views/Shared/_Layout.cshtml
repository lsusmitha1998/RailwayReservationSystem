<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
@*<div class="bg-image"
    style="background-image: url('https://mdbootstrap.com/img/Photos/Others/images/76.jpg');
          height: 100vh">
    </div>*@
@*style="background-image: url('https://images.unsplash.com/photo-1527684651001-731c474bbb5a?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=634&q=80'); "*@
<body style="background-image: url('https://mdbootstrap.com/img/Photos/Others/images/76.jpg');">

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Railway Resevation system", "Index", "Welcome", new { area = "" }, new { @class = "navbar-brand" })*@
                
            <button style="padding-top:10px;font-size:20px;" type="button" class="btn btn-link" data-toggle="modal" data-target="#exampleModalCenter">
                Railway Resevation system
            </button>
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Welcome")</li>
                    <li>@Html.ActionLink("Admin", "Adminlogin", "Admin")</li>
                    @*<li>@Html.ActionLink("Covid 19 Alert", "Alert", "Home")</li>*@
                    &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                    <li style="position:fixed;right:250px;top:5px;"> @Html.ActionLink("Logout", "Logout", "User")</li>
                    
                </ul>
            </div>
        </div>
    </div>
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="Covid 19 Alert!!" id="exampleModalLongTitle" style="color:red">Covid 19 Alert!!</h3>
                    @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>*@
                </div>
                <div class="modal-body">
                    <h4>
                        All the passengers are hereby informed that, <br> <br>
                        <strong style="color:blue">Wear a Mask, Follow Physical Distancing and Maintain Hand<br><br> hygiene and downloading of Arogya Setu App in your mobile<br><br> phone is advisable</strong>
                    </h4>
                </div>
                <div class="modal-footer">
                    @*<button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>*@
                    @Html.ActionLink("close", "Index", "Welcome")

                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        <div style="bottom:0;position: fixed; width:100%;">
            <footer style="bottom:0;">
                <p>&copy; @DateTime.Now.Year - Reservation</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>