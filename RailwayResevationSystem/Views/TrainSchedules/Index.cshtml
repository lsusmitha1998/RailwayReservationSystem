@model IEnumerable<RailwayResevationSystem.Models.TrainSchedule>

@{
    ViewBag.Title = "Index";
}

<h2>Halting Stations</h2>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#buttonid1').click(function () {
            document.location = '@Url.Action("Create","TrainSchedules")';
        });
    });
</script>

